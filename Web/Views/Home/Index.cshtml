
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录页面</title>
    <style>
    </style>
    <link href="~/lib/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/assets/css/LoginStyle.css" rel="stylesheet" />
    <script src="~/Lib/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Lib/assets/js/jquery.validate.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#msform").validate({
                rules: {
                    username: "required",
                    password: "required",
                },
                messages: {
                    username: "请输入您的名字",
                    password: "请输入您的密码",
      
                }
            })

         
        });
    </script>
</head>
<body>
    <form action="~/Home/Login" method="post" id="msform">
        <div class="loginbox">
            <div class="logintitle">信息管理系统</div>
            <div class="loginuser"><i class="fa fa-user"></i></div>
            <div class="loginusertext"><input type="text" id="username" name="username" /></div>
            <div class="clear"></div>
            <div class="loginpass"><i class="fa fa-key"></i></div>
            <div class="loginpasstext"><input type="password" id="password" name="password" /></div>
            <div class="clear"></div>
            <div class="loginbutton"><input type="submit" class="button" value="确定"  /></div>
            <div class="mention">@ViewData["LoginSuccess"]</div>
        </div>
    </form>
</body>
</html>
